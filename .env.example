# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=auction_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=auction_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Backend API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
JWT_SECRET_KEY=change_me_to_random_32_char_string_minimum
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_RATE_LIMIT=100
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Scraper Configuration
SCRAPER_CONCURRENCY=2
SCRAPER_DELAY_MS=1000
SCRAPER_TIMEOUT_SECONDS=30
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_RETRY_DELAY_MS=2000
RESPECT_ROBOTS_TXT=true
SCRAPER_USER_AGENT=AI-RealEstate-Bot/1.0 (+https://yoursite.com/bot)
SCRAPER_SCHEDULE_CRON=0 */6 * * *
# Target URLs (comma-separated)
SCRAPER_TARGETS=https://pvp.giustizia.it/pvp/

# NLP Service Configuration
NLP_SERVICE_HOST=nlp-service
NLP_SERVICE_PORT=8001
NLP_MODEL=it_core_news_lg
NLP_WORKERS=2
# Embedding configuration
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DIMENSION=384

# Alternative: OpenAI embeddings (uncomment and configure if preferred)
# EMBEDDING_PROVIDER=openai
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=text-embedding-3-small
# EMBEDDING_DIMENSION=1536

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_URL=http://${QDRANT_HOST}:${QDRANT_PORT}
QDRANT_COLLECTION=auctions
QDRANT_API_KEY=
QDRANT_GRPC_PORT=6334

# Redis (for caching and message queue)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_MAPBOX_TOKEN=your_mapbox_token_here

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# Notification Service
ENABLE_PUSH_NOTIFICATIONS=true
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_CREDENTIALS_PATH=/app/config/firebase-credentials.json

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@auction-analyzer.com

# AI Ranking Configuration (loaded from config.yaml)
RANKING_CONFIG_PATH=/app/config/config.yaml

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
SECURE_COOKIES=false
HTTPS_ONLY=false

# Development/Production
ENVIRONMENT=development
DEBUG=true

# Admin Credentials (first admin user)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_me_admin_password
